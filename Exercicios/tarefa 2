 #include <stdio.h>

int main() {
    int visitantes;

    printf("Digite o número de visitantes que entraram hoje: ");
    scanf("%d", &visitantes);

    printf("Registro concluído! %d visitantes registrados hoje.\n", visitantes);

    return 0;
}
int main() {
    float receita, despesa, saldo;

    printf("Digite o valor da receita: ");
    scanf("%f", &receita);

    printf("Digite o valor da despesa: ");
    scanf("%f", &despesa);

    saldo = receita - despesa;

    printf("Saldo atualizado: %.2f\n", saldo);

    return 0;
}

